<Ui>
	<Frame name="DFLootDictionaryFrame" virtual="true">
	<Anchors>
		<Anchor point="TOPLEFT">
		</Anchor>
	</Anchors>
	<Size>
		<!-- The size of this frame determines what can be clicked for the menu and moving, hence it is the same size as the name frame. -->
		<AbsDimension x="106" y="25"/>
	</Size>
	<Backdrop bgFile="Interface\Addons\DFLootDictionary\Images\XPerl_FrameBack" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
		<EdgeSize>
			<AbsValue val="16"/>
		</EdgeSize>
		<TileSize>
			<AbsValue val="32"/>
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="5" right="5" top="5" bottom="5"/>
		</BackgroundInsets>
	</Backdrop>
	<Layers>
		<Layer name="OVERLAY">
			<FontString name="$parent_NameBarText" inherits="GameFontNormal" text="">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>	
</Frame>

	<Frame name="DFLootDictionaryFrames">
		<Scripts>
			<OnLoad>
				DFLootDictionary.OnLoad();
			</OnLoad>
		</Scripts>
		<Frames>		
		</Frames>
	</Frame>	
	
</Ui>